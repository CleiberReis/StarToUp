@model StarToUp.Models.PerfilStartup

@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "PerfilStartups", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


    <div class="container">
        <div class="section-header text-center">
            <br />
            <h2 class="title">Startup, Crie seu perfil</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <form class="form-signin">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div>
                            @Html.DropDownList("StartupCadastroID", null, "Qual Startup é você?", new { @class = "form-control input" })
                            @Html.ValidationMessageFor(model => model.StartupCadastroID, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div>
                            <input type="text" name="nome" id="nome" class="form-control input" placeholder="Nome da Startup *" />
                            @Html.ValidationMessageFor(model => model.NomeStartup, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div>
                            <input type="text" name="dataFundacao" id="dataFundacao" class="form-control input" placeholder="Data da Fundação DD/MM/YYYY *" />
                            @Html.ValidationMessageFor(model => model.DataFundacao, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div>
                            @Html.DropDownList("SegmentacaoID", null, "Qual sua segmentação de mercado?", new { @class = "form-control input" })
                            @Html.ValidationMessageFor(model => model.SegmentacaoID, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div>
                            <input type="text" name="tamanhoTime" id="tamanhoTime" class="form-control input" placeholder="Qual a média de pessoas no seu time?" />
                            @Html.ValidationMessageFor(model => model.TamanhoTime, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        @*Endereço*@
                        <div>
                            <input type="text" name="cep" id="cep" class="form-control input" placeholder="CEP XX.XXX-XXX" />
                            @Html.ValidationMessageFor(model => model.Cep, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div>
                            <input type="text" name="rua" id="rua" class="form-control input" placeholder="Digite a Rua *" />
                            @Html.ValidationMessageFor(model => model.Rua, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div>
                            <input type="text" name="bairro" id="bairro" class="form-control input" placeholder="Digite o Bairro *" />
                            @Html.ValidationMessageFor(model => model.Bairro, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div>
                            <input type="text" name="numero" id="numero" class="form-control input" placeholder="Digite o Numero *" />
                            @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div>
                            <input type="text" name="complemento" id="complemento" class="form-control input" placeholder="Tem algum complemento?" />
                            @Html.ValidationMessageFor(model => model.Complemento, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div>
                            <input type="text" name="cidade" id="cidade" class="form-control input" placeholder="Em qual cidade fica sua Startup?" />
                            @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div>
                            <input type="text" name="estado" id="estado" class="form-control input" placeholder="Em qual estado fica sua Startup?" />
                            @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                @*LogoTipo*@


