@model StarToUp.Models.PerfilStartup

@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "PerfilStartups", null, FormMethod.Post, new { enctype ="multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="section-header text-center">
            <br />
            <h2 class="title">Startup, Crie seu perfil</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <form class="form-signin">
            <div class="col-md-6">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="input">
                    @Html.DropDownList("StartupCadastroID", null, "Qual Startup é você?", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StartupCadastroID, "", new { @class = "text-danger" })
                </div>
                <br />
                <div>
                    <input type="text" name="nome" id="nome" class="input" placeholder="Nome da Startup *" />
                    @Html.ValidationMessageFor(model => model.NomeStartup, "", new { @class = "text-danger" })
                </div>
                <br />
                <div>
                    <input type="text" name="dataFundacao" id="dataFundacao" class="input" placeholder="Data da Fundação DD/MM/YYYY *" />
                    @Html.ValidationMessageFor(model => model.DataFundacao, "", new { @class = "text-danger" })
                </div>
                <br />
                <div class="input">
                    @Html.DropDownList("SegmentacaoID", null, "Qual sua segmentação de mercado?", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SegmentacaoID, "", new { @class = "text-danger" })
                </div>
                <br />
                <div>
                    <input type="text" name="tamanhoTime" id="tamanhoTime" class="input" placeholder="Qual a média de pessoas no seu time?" />
                    @Html.ValidationMessageFor(model => model.TamanhoTime, "", new { @class = "text-danger" })
                </div>
                <br />
                @*Endereço*@
                <div>
                    <input type="text" name="cep" id="cep" class="input" placeholder="CEP XX.XXX-XXX" />
                    @Html.ValidationMessageFor(model => model.Cep, "", new { @class = "text-danger" })
                </div>
                <br />
                <div>
                    <input type="text" name="rua" id="rua" class="input" placeholder="Digite a Rua *" />
                    @Html.ValidationMessageFor(model => model.Rua, "", new { @class = "text-danger" })
                </div>
                <br />
                <div>
                    <input type="text" name="bairro" id="bairro" class="input" placeholder="Digite o Bairro *" />
                    @Html.ValidationMessageFor(model => model.Bairro, "", new { @class = "text-danger" })
                </div>
                <br />
                <div>
                    <input type="text" name="numero" id="numero" class="input" placeholder="Digite o Numero *" />
                    @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                </div>
                <br />
                <div>
                    <input type="text" name="complemento" id="complemento" class="input" placeholder="Tem algum complemento?" />
                    @Html.ValidationMessageFor(model => model.Complemento, "", new { @class = "text-danger" })
                </div>
                <br />
                <div>
                    <input type="text" name="cidade" id="cidade" class="input" placeholder="Em qual cidade fica sua Startup?" />
                    @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger" })
                </div>
                <br />
                <div>
                    <input type="text" name="estado" id="estado" class="input" placeholder="Em qual estado fica sua Startup?" />
                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                </div>
                <br />
            </div>
            <div class="col-md-6">
                <div>
                    <input type="text" name="objetivo" id="objetivo" class="input" placeholder="Digite qual o objetivo de vocês. É apenas uma breve descrição ou frase!" />
                    @Html.ValidationMessageFor(model => model.Objetivo, "", new { @class = "text-danger" })
                </div>
                <br />
            </div>
            <div>
                @Html.LabelFor(model => model.Logotipo, htmlAttributes: new { @class = "controllabel col-md-2" })
                <div class="col-md-10">
                    <input type="file" id="logoTipo" name="logoTipo" />
                    @{
                        string logoTipo = ViewBag.FotoMensagem;
                        if (logoTipo != "")
                        {
                            <span class="text-danger contenterror">
                                @ViewBag.FotoMensagem
                            </span>
                        }
                    }
                </div>
            </div>
            @*Imagens da Startup*@
            <label>Insira fotos da sua Startup</label>
            <div>
                @Html.LabelFor(model => model.ImagemLocal1, htmlAttributes: new { @class = "controllabel col-md-2" })
                <div class="col-md-10">
                    <input type="file" id="imagemLocal1" name="imagemLocal1" />
                    @{
                        string imagemLocal1 = ViewBag.FotoMensagem;
                        if (imagemLocal1 != "")
                        {
                            <span class="text-danger contenterror">
                                @ViewBag.FotoMensagem
                            </span>
                        }
                    }
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.ImagemLocal2, htmlAttributes: new { @class = "controllabel col-md-2" })
                <div class="col-md-10">
                    <input type="file" id="imagemLocal2" name="imagemLocal2" />
                    @{
                        string imagemLocal2 = ViewBag.FotoMensagem;
                        if (imagemLocal2 != "")
                        {
                            <span class="text-danger contenterror">
                                @ViewBag.FotoMensagem
                            </span>
                        }
                    }
                </div>
            </div>

            @*MVP*@
            <label>Insira fotos do seu MVP</label>
            <div>
                @Html.LabelFor(model => model.ImagemMVP1, htmlAttributes: new { @class = "controllabel col-md-2" })
                <div class="col-md-10">
                    <input type="file" id="imagemMVP1" name="imagemMVP1" />
                    @{
                        string imagemMVP1 = ViewBag.FotoMensagem;
                        if (imagemMVP1 != "")
                        {
                            <span class="text-danger contenterror">
                                @ViewBag.FotoMensagem
                            </span>
                        }
                    }
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.ImagemMVP2, htmlAttributes: new { @class = "controllabel col-md-2" })
                <div class="col-md-10">
                    <input type="file" id="imagemMVP2" name="imagemMVP2" />
                    @{
                        string imagemMVP2 = ViewBag.FotoMensagem;
                        if (imagemMVP2 != "")
                        {
                            <span class="text-danger contenterror">
                                @ViewBag.FotoMensagem
                            </span>
                        }
                    }
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.ImagemMVP3, htmlAttributes: new { @class = "controllabel col-md-2" })
                <div class="col-md-10">
                    <input type="file" id="imagemMVP3" name="imagemMVP3" />
                    @{
                        string imagemMVP3 = ViewBag.FotoMensagem;
                        if (imagemMVP3 != "")
                        {
                            <span class="text-danger contenterror">
                                @ViewBag.FotoMensagem
                            </span>
                        }
                    }
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.ImagemMVP4, htmlAttributes: new { @class = "controllabel col-md-2" })
                <div class="col-md-10">
                    <input type="file" id="imagemMVP4" name="imagemMVP4" />
                    @{
                        string imagemMVP4 = ViewBag.FotoMensagem;
                        if (imagemMVP4 != "")
                        {
                            <span class="text-danger contenterror">
                                @ViewBag.FotoMensagem
                            </span>
                        }
                    }
                </div>
            </div>







        </form>
        <div>
            <textarea name="sobre" id="sobre" class="input" rows="5" cols="60" placeholder="Nos conte sobre sua Startup, queremos saber tudo sobre vocês!"></textarea>
            @Html.ValidationMessageFor(model => model.Sobre, "", new { @class = "text-danger" })
        </div>
        <br />
        <div class="text-center">
            <button class="main-btn" type="submit" value="Criar">Criar Perfil</button>
        </div>
        <br /><br />
    </div>
}
