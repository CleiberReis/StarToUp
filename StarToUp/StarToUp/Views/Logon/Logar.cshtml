@model IEnumerable<StarToUp.Models.StartupCadastro>
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    ViewBag.Title = "Logon";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="login_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-login login_block">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="centerLoginContent">
                                    <form name="loginForm" action="/login" method="post">
                                        <input type="hidden" name="initialURI" value="/">
                                        <h2 class="login_title">LOGIN STARTUP</h2>
                                        <div class="">
                                            <p class="login_text">Entre com seu email e senha para realizar<span> o login</span></p>
                                            <div class="form-group">
                                                <label for="username">Email<span class="err_cls">*</span></label>
                                                <input class="input form-control" tabindex="1" id="email" name="email" type="text" placeholder="Email" onblur="this.placeholder = 'Email'" />
                                            </div>
                                            <div class="form-group">
                                                <label for="password">Senha<span class="err_cls">*</span></label>
                                                <input class="input form-control" tabindex="2" type="password" id="senha" name="senha" placeholder="Senha" onblur="this.placeholder = 'Senha'" />
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-6 text-center">
                                    @*<a href="#" data-toggle="modal" data-target="#modal">Esqueceu a senha? - Clique aqui!</a>*@
                                    @Html.ActionLink("Esqueceu a senha? - Clique aqui!", "EsqueciSenha", "Logon")
                                </div>
                                <br />
                                <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modal" aria-hidden="true">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                <h3 class="modal-title" id="myModalLabel">Recuperação de Senha!</h3>
                                            </div>
                                            <div class="modal-body">
                                                <label>Digite seu e-mail abaixo para receber sua senha:</label>
                                                <input type="text" name="email" id="email" class="form-control input" placeholder="E-mail" />
                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-warning">@Html.ActionLink("Enviar Senha!", "EsqueciSenha", "Logon")</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br />
                            </div>
                        </div>
                        <div class="text-center">
                            <div id="UIPortalLoginFormAction" class="loginButton">
                                <button class="button_login" type="submit" value="Entrar" tabindex="4">Login</button>
                            </div>
                        </div>
                        <br />
                        @*<div class="">
                                <div class="">
                                    <div id="social-login">
                                        <p class="linkedin_bgcolor">
                                            <a class="btn-block btn-social btn-linkedin" href="javascript:void(0)">
                                                <i class="fa fa-facebook" aria-hidden="true"></i><span class="fb_left">Sign in with facebook</span>
                                            </a>
                                        </p>
                                        <p class="googleplus_bgcolor">
                                            <a class="btn-block btn-social btn-linkedin" href="javascript:void(0)">
                                                <i class="fa fa-google-plus"></i> <span class="g_plus">Sign in with Google</span>
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
}
