@model StarToUp.Models.Evento

@{
                /**/

                ViewBag.Title = "Cadastro de Eventos";
                Layout = "~/Views/Shared/_AreaAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <br />
        <div class="section-header text-center">
            <h2 class="title">Novo Evento</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="card card-container">
            @*<img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />*@
            <br />
            <form class="contact-form">
                <div>
                    <input type="text" name="nome" id="nome" class="input" placeholder="Nome *" />
                </div>
                <br />
                <div>
                    <input type="text" name="descricao" id="descricao" class="input" placeholder="Descrição *" />
                </div>
                <br />
                <div>
                    <input type="text" name="foto" id="foto" class="input" placeholder="Foto *" />
                </div>
                <br />
                <div>
                    <input type="datetime" name="data" id="data" class="input" placeholder="Data *" />
                </div>
                <button class="btn btn-lg btn-success btn-block" type="submit" value="Cadastrar">Cadastrar</button>
            </form>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
