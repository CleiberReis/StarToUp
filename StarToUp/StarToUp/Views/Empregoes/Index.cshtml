@model IEnumerable<StarToUp.Models.Emprego>

@{
    IEnumerable<StarToUp.Models.StartupCadastro> startupCadastros = (IEnumerable<StarToUp.Models.StartupCadastro>)ViewBag.startupCadastros;
    ViewBag.Title = "Vagas de Emprego";
    Layout = "~/Views/Shared/_IndexStartup.cshtml";
}
<!-- Header -->
<header>
    <div>
        <div class="bg-img" style="background-image: url('../../Content/img/background2.jpg');">
            <div class="overlay"></div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    </div>

    <nav id="nav" class="navbar nav-transparent">
        <div class="container">
            <div class="navbar-header">
                <div class="nav-collapse">
                    <span></span>
                </div>
            </div>
            <!--  Main navigation  -->
            
                    <ul class="main-nav nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Nova vaga", "Create")</li>
                        <li>@Html.ActionLink("Home Startup", "Index", "StartupCadastros")</li>

                    </ul>
                    <!-- /Main navigation -->

        </div>
    </nav>
    <!-- /Nav -->
</header>
<!-- /Header -->
<!-- Pricing -->
<div id="pricing" class="section md-padding">

    <!-- Container -->
    <div class="container">

        <!-- Row -->
        <div class="row">

            <!-- Section header -->
            <br />
            <div class="section-header text-center">
                <h2 class="title">Vagas abertas</h2>
            </div>
            <!-- /Section header -->
            <!-- pricing -->
            @foreach (var item in Model)
            {
                <div class="col-sm-4">
                    <div class="pricing">
                        <div class="price-head">
                            <span class="price-title">@Html.DisplayFor(modelItem => item.TituloVaga)</span>
                            <div class="price">
                                <h3><span class="duration">Foto da empresa</span></h3>
                            </div>
                        </div>
                        <ul class="price-content">
                            <li>
                                <p>@Html.DisplayNameFor(model => model.LocalVaga) @Html.DisplayFor(modelItem => item.LocalVaga)</p>
                            </li>
                            <li>
                                <p>@Html.DisplayNameFor(model => model.SalarioVaga) @Html.DisplayFor(modelItem => item.SalarioVaga)</p>
                            </li>
                            <li>
                                <p>@Html.DisplayNameFor(model => model.RequisitosVaga) @Html.DisplayFor(modelItem => item.RequisitosVaga)</p>
                            </li>
                            <li>
                                <p>@Html.DisplayNameFor(model => model.DescricaoVaga) @Html.DisplayFor(modelItem => item.DescricaoVaga)</p>
                            </li>
                        </ul>
                        <div class="price-btn">
                            <button class="outline-btn">@Html.ActionLink("Detalhes", "Details", new { id = item.EmpregoID })</button>
                        </div>
                        @Html.ActionLink("Editar", "Edit", new { id = item.EmpregoID }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = item.EmpregoID })
                    </div>
                </div>
            }
            <!-- /pricing -->

        </div>
        <!-- Row -->

    </div>
    <!-- /Container -->

</div>
<!-- /Pricing -->

<footer id="footer" class="sm-padding bg-dark">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="footer-logo">
                    <a href="~/Views/Home/Index.cshtml"><img src="~/Content/img/logo2.png" alt="logo"></a>
                </div>
                <ul class="footer-follow">
                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                    <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                    <li><a href="#"><i class="fa fa-youtube"></i></a></li>
                </ul>
                <div class="footer-copyright">
                    <p>Copyright © 2019. All Rights Reserved. Designed by <a href="https://techintime.com" target="_blank">Tech In Time</a></p>
                </div>
            </div>
        </div>
    </div>
</footer>
